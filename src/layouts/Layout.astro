---
import MainFooter from "../components/layout/MainFooter.astro";
import MainHeader from "../components/layout/MainHeader.astro";
import MainSidebar from "../components/layout/MainSidebar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>mmfilesi lab</title>
	</head>
	<body>
		<div class='main-container'>

			<MainHeader />

			<div class='main'>
				<MainSidebar/>
				<main class='main-page'>
					<slot />
				</main>
			</div>

			<MainFooter />

		</div>
	</body>
</html>

<style is:global>
:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;

  color-scheme: light dark;
  color: rgba(255, 255, 255, 0.87);
  background-color: #242424;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

html, body {
  height: 100%;
  margin: 0;
}

body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  font-family: 'Sarabun', sans-serif;
  font-weight: 400;
  font-style: normal;
  background: #ededed;
	color: #000000;
}

.bold {
  font-family: 'Sarabun', sans-serif;
  font-weight: 700;
  font-style: normal;
}

.italic {
  font-family: 'Sarabun', sans-serif;
  font-weight: 400;
  font-style: italic;
}

.brutalist-button {
  background-color: #ffcc00;
  color: #000;
  font-size: 16px;
  font-weight: bold;
  text-transform: uppercase;
  padding: 10px 20px;
  border: 3px solid #000;
  cursor: pointer;
  display: inline-block;
  text-align: center;
  transition: all 0.2s ease-in-out;
}

.brutalist-button:hover {
  background-color: #000;
  color: #ffcc00;
}

.brutalist-button:active {
  background-color: #ffcc00;
  color: #000;
  transform: translateY(2px);
}

.main-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.main {
  display: flex;
  flex: 1;
}

.main-page {
  margin: 1rem;
  flex-grow: 1;
  width: 100%;
}

.main-header {
  font-family: 'Montserrat', sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 8rem;
  background-color: black;
  color:#ffcc00;
  font-size: 2rem;
  text-transform: uppercase;
  border-bottom: 0.6rem solid #949494;
  box-sizing: border-box;
}

.subheader {
  font-family: 'Montserrat', sans-serif;
  text-align: center;
  font-size: 2rem;
  font-weight: 700;
}

.main-footer {
  background-color: #000;
  color: #ffcc00;
  text-align: center;
  padding: 20px 0;
  font-size: 1rem;
  border-top: 5px solid #555555;
  height: 4rem;
  box-sizing: border-box;
}

.main-footer a {
  color: #ffcc00;
  text-decoration: none;
  font-weight: bold;
}

.main-footer  a:hover {
  color: #fff;
  text-decoration: underline;
  text-decoration-thickness: 2px;
}

.main-sidebar {
  background-color: #ffcc00;
  color: #000;
  padding: 20px;
  border-right: 5px solid #000;
  width: 12rem;
  min-width: 12rem;
  min-height: 2rem;
  overflow: hidden;
  box-sizing: border-box;
}

.main-sidebar ul {
  list-style: none;
  padding: 0;
}

.main-sidebar ul li {
  margin-bottom: 15px;
}

.main-sidebar a {
  font-size: 1.1rem;
  font-weight: 700;
  text-decoration: none;
  color: #000;
  display: block;
  padding: 10px 0;
}

.main-sidebar a:hover {
  background-color: #000;
  color: #ffcc00;
  text-decoration: underline;
  text-decoration-thickness: 3px;
}

.main-sidebar button {
  background-color: #000;
  color: #ffcc00;
  border: none;
  padding: 10px 15px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  text-transform: uppercase;
}

.main-sidebar button:hover {
  background-color: #ffcc00;
  color: #000;
}

</style>
