---
import cham from '../../assets/cham-01.jpg';
---
<header class="main-header">
  <div class="main-header__logo">
    <div class="logo__container">
      <img src={cham.src} alt="logo" width="75px" height="75px" />
    </div>
  </div>
  <h1 class="main-header__content">mmfilesi lab</h1>
</header>

<style>
  .main-header {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    height: 6rem;
    border-bottom: 0.6rem solid var(--color-border-gray);
    background-color: var(--color-black);
    color: var(--color-primary);
    font-family: var(--font-family-secondary);
    font-size: 2rem;
  }

  .logo__container {
    width: 4.5rem;
    height: 4.5rem;
    border-radius: 50%;
    overflow: hidden;
  }

  .main-header__logo {
    width: var(--size-col-left);
    display: flex;
    justify-content: center;
    margin: 0 auto;
    overflow: hidden;
  }

  .main-header__content {
    text-align: center;
    flex-grow: 1;
  }

</style>